% Testing of the MPFA U-method on a parallelogram grid

begin CouplingCoefficients
	type U_MPFA
end

%--------------------------------------------------------------------

begin Mesh

	type StructuredMesh

	dimension 2

	begin Domains

		%origin
		X0	0.0 
		Y0	0.0 

		%X-domains specification	
		array Nx
			21
		end

		array Dx
			0.047619
		end

		%Y-domains specification	
		array Ny
			10
		end

		array Dy
			0.1
		end

		%uniform, layer or domain
		RegionMappingType uniform

		% Mesh transformation
		begin StructuredTransform

			type BilinearTransform

			array x
				0.0 105.0 20.0 124.0
				%0.0 105.0 20.0 125.0
			end

			array y
				0.0 0.0 10.0 10.0
			end
			
		end
		
	end

	begin RockRegionMap

		%names must match RockRegion input data
		array Rock
		   1     % indices must match those produced by RegionMappingType above
		end

	end

	begin RockData

		type Global

		array poro
			0.2
		end

		array permx 
			1.0
		end

		array permy
			1.0 
		end

		array permz 
			1.0 
		end

	end
	
end


